    "version": "0.2.0",
    "configurations": [
        {
            "name": "start server",
            "type": "f5anything",
            "request": "launch",
            "command": "cd server; node run.js",
            "terminalName": "server",
            "terminalIndex": 0,
            "showTerminal": true,
        },
        {
            "name": "start client",
            "type": "f5anything",
            "request": "launch",
            "command": "cd client; http-server",
            "terminalName": "client",
            "terminalIndex": 1,
            "showTerminal": true,
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "launch with edge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
        }
    ]
}